<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:layout_marginTop="50dp">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/back_btn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming  rewards"
        android:fontFamily="@font/inter"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here are the following ways to earn more rewards:"
        android:fontFamily="@font/inter"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/education"
        android:layout_marginTop="60dp"/>
    <View
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:background="@drawable/dot"
        android:layout_marginTop="8dp"
        android:layout_marginStart="23dp"/>
    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/dot"
        android:layout_marginTop="8dp"
        android:layout_marginStart="23dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/rectangle"
       />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/write"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First time installing of App"
        android:fontFamily="@font/inter_semibold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_gravity="center_vertical"
        />
    </LinearLayout>
    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/dot"
        android:layout_marginTop="5dp"
        android:layout_marginStart="23dp"/>
    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/dot"
        android:layout_marginTop="8dp"
        android:layout_marginStart="23dp"/>
    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/dot"
        android:layout_marginTop="8dp"
        android:layout_marginStart="23dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/rectangle"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/write"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refer to your friends"
            android:fontFamily="@font/inter_semibold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"

            />
    </LinearLayout>
    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/dot"
        android:layout_marginTop="5dp"
        android:layout_marginStart="23dp"/>
    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/dot"
        android:layout_marginTop="8dp"
        android:layout_marginStart="23dp"/>
    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/dot"
        android:layout_marginTop="8dp"
        android:layout_marginStart="23dp"/>
    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/dot"
        android:layout_marginTop="8dp"
        android:layout_marginStart="23dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/rectangle"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/write"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place your first order"
            android:fontFamily="@font/inter_semibold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"

            />
    </LinearLayout>
    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/dot"
        android:layout_marginTop="5dp"
        android:layout_marginStart="23dp"/>
    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/dot"
        android:layout_marginTop="8dp"
        android:layout_marginStart="23dp"/>
    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/dot"
        android:layout_marginTop="8dp"
        android:layout_marginStart="23dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/rectangle"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/write"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sell your first Home Made dish"
            android:fontFamily="@font/inter_semibold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"

            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/dot"
        android:layout_marginTop="5dp"
        android:layout_marginStart="23dp"/>
    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/dot"
        android:layout_marginTop="8dp"
        android:layout_marginStart="23dp"/>
    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/dot"
        android:layout_marginTop="8dp"
        android:layout_marginStart="23dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
       >
    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/dot"
        android:layout_marginTop="8dp"
        android:layout_marginStart="23dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More rewards coming soon!"
            android:fontFamily="@font/inter_semibold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-3dp"/>

    </LinearLayout>

</LinearLayout>