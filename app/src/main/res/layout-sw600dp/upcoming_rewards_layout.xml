<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/reward_banner">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back_btn"
                android:layout_marginTop="50dp"
                android:layout_marginStart="15dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/round"
                android:layout_marginStart="10dp" />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upcoming"
            android:fontFamily="@font/inter"
            android:textSize="32sp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/earn_para"
            android:fontFamily="@font/inter"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/education"
            android:layout_marginTop="60dp"/>
        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/dot"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/dot"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/reward_logo"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_tym_app_install"
                android:fontFamily="@font/inter_semibold"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/dot"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/dot"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/dot"
            android:layout_marginTop="8dp"
            android:layout_marginStart="28dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/reward_logo"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refer"
                android:fontFamily="@font/inter_semibold"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"


                />
        </LinearLayout>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/dot"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/dot"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/dot"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/dot"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/reward_logo"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place_order"
                android:fontFamily="@font/inter_semibold"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"


                />
        </LinearLayout>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/dot"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/dot"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/dot"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/reward_logo"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sell_home_dish"
                android:fontFamily="@font/inter_semibold"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/dot"
            android:layout_marginTop="5dp"
            android:layout_marginStart="28dp"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/dot"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/dot"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/dot"
                android:layout_marginTop="10dp"
                android:layout_marginStart="28dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more_rewards"
                android:fontFamily="@font/inter_semibold"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_marginStart="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="-5dp"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/reward_design"
                android:adjustViewBounds="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-50dp"
                />
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>